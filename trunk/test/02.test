###### LOAD WITH OPENSECRET! ######
OPENSECRET="whatasecret"
CLOSESECRET="theclosesecret"

load

rule_only "SSH" "2000,2001" "22" "--opensecret $OPENSECRET --closesecret $CLOSESECRET"
expect "SSH,(A)" 

knock_udp "11.10.0.1" "22"  
expect "!PASS OK"
knock_udp "11.10.0.1" "2000"
expect "!MATCHING"
knock_udp "11.10.0.1" "2001"
expect "!MATCHING,!ALLOWED"
knock_udp "11.10.0.1" "22"
expect "!PASS OK"

#bad secret
set_hmac "qweasdzxc" "11.10.0.1" 

knock_udp "11.10.0.1" "2000"
expect "!MATCHING"

#bad ipsrc
set_hmac $OPENSECRET "12.10.0.1" 

knock_udp "11.10.0.1" "2000"
expect "!MATCHING"

# GOOD!
set_hmac $OPENSECRET "11.10.0.1" 

knock_udp "11.10.0.1" "2000"
expect "MATCHING"
knock_udp "11.10.0.1" "2001"
expect "ALLOWED"
knock_udp "11.10.0.1" "22"
expect "PASS OK"
knock_udp "11.10.0.1" "22"
expect "PASS OK"

# close door
set_hmac $CLOSESECRET "11.10.0.1" 
knock_udp "11.10.0.1" "9999" # send to any port!

# verify it is closed
knock_udp "11.10.0.1" "22"
expect "!MATCHING,!ALLOWED,!PASS OK, BLOCKED"

unload
